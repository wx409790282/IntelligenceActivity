                android:layout_weight="1"
                android:gravity="center"
                android:text="App"
                android:textColor="@color/gray"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />
    </LinearLayout>

</RelativeLayout>