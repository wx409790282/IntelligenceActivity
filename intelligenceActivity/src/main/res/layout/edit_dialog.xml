<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
             >
            <RelativeLayout
            android:id="@+id/comment_layout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comment_view_bg"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" 
            android:layout_alignParentBottom="true"
            >
            <EditText
                	android:layout_toLeftOf="@+id/comment_bt_id"
                	android:layout_centerVertical="true"
                    android:hint="@string/label_hint"
                    android:singleLine="true"
                    android:id="@+id/comment_edittext_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/comment_edit_bg"
                    android:padding="10dip"
                    android:layout_marginRight="5dip"
                    />
                <Button
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/comment_bt_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/comment_bt_bg"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="20dip" />
        </RelativeLayout>
        </RelativeLayout>

